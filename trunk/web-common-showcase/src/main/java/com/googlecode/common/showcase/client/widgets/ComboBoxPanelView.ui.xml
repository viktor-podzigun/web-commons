<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' 
             xmlns:g='urn:import:com.google.gwt.user.client.ui' 
             xmlns:c="urn:import:com.googlecode.common.client.ui">
  
  <g:HTMLPanel>
    
    <h3>ComboBox</h3>
    <p>Demonstrates simple combo-box functionality.</p>
    <div class="bs-docs-example">
      <div class="row-fluid">
        <div class="span6">
          <c:ComboBox ui:field="comboBox" />
          <c:ImageCheckBox ui:field="comboBoxEnable" value="true" text="Enabled" />
        </div>
        <div class="span6">
            Selected Item: 
            <c:ImageLabel ui:field="comboBoxLabel" />
        </div>
      </div>
    </div>
<pre class="prettyprint linenums"><![CDATA[
]]></pre>

    <h3>Loadable ComboBox</h3>
    <p>Demonstrates LoadableComboBox functionality.</p>
    <div class="bs-docs-example">
      <div class="row-fluid">
        <div class="span6">
          <c:LoadableComboBox ui:field="loadableComboBox" />
          <c:ImageCheckBox ui:field="loadableComboBoxEnable" value="true" text="Enabled" />
          <c:ImageCheckBox ui:field="loadableComboBoxEditable" value="false" text="Editable" />
          <hr/>
          ComboBox style:
          <br/>
          <c:RadioBtn ui:field="none" name="comboSt" text="none" checked="true"/>
          <c:RadioBtn ui:field="inputXlarge" name="comboSt" text="input-xlarge"/>
          <c:RadioBtn ui:field="inputMedium" name="comboSt" text="input-medium"/>
          <c:RadioBtn ui:field="inputMini" name="comboSt" text="input-mini"/>
          </div>
        <div class="span6">
            Selected Item: 
            <c:ImageLabel ui:field="loadableComboBoxLabel" />
        </div>
      </div>
    </div>
<pre class="prettyprint linenums"><![CDATA[
]]></pre>

    <h3>Loadable ComboBox with multiple selection</h3>
    <p>Demonstrates LoadableComboBox MS functionality.</p>
    <div class="bs-docs-example">
      <div class="row-fluid">
        <div class="span6">
          <c:LoadableComboBox ui:field="loadableComboBoxMS" />
        </div>
        <div class="span6">
            Selected Item(s): 
            <c:ImageLabel ui:field="loadableComboBoxLabelMS" />
        </div>
      </div>
    </div>
