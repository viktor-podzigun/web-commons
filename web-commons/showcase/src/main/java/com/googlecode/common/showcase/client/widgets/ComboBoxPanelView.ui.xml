<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' 
             xmlns:g='urn:import:com.google.gwt.user.client.ui' 
             xmlns:c="urn:import:com.googlecode.common.client.ui">
  
  <ui:style>
      .example {
        background-color: #f5f5f5;
      }
  </ui:style>

  <g:HTMLPanel>
    
    <h3>ComboBox</h3>
    <p>Demonstrates simple combo-box functionality.</p>
    <div class="bs-docs-example {style.example}">
      <div class="row-fluid">
        <div class="span6">
          <c:ComboBox ui:field="comboBox" />
          <c:ImageCheckBox ui:field="comboBoxEnable" value="true" text="Enabled" />
        </div>
        <div class="span6">
            Selected Item: 
            <c:ImageLabel ui:field="comboBoxLabel" />
        </div>
      </div>
    </div>
<pre class="prettyprint linenums"><![CDATA[
]]></pre>

    <h3>Loadable ComboBox</h3>
    <p>Demonstrates LoadableComboBox functionality.</p>
    <div class="bs-docs-example {style.example}">
      <div class="row-fluid">
        <div class="span6">
          <c:LoadableComboBox ui:field="loadableComboBox" />
          <c:ImageCheckBox ui:field="loadableComboBoxEnable" value="true" text="Enabled" />
          <c:ImageCheckBox ui:field="loadableComboBoxEditable" value="false" text="Editable" />
        </div>
        <div class="span6">
            Selected Item: 
            <c:ImageLabel ui:field="loadableComboBoxLabel" />
        </div>
      </div>
    </div>
